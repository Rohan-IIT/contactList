extends layout

block content
  .container
    .row.justify-content-center.mt-5
      .col-md-8
        h1= title
        p Use the form below to add a contact.
        hr
        if msg 
          ul
            each val in msg 
              li(class='redtext')= val.msg
        form(method='POST' action='/contacts/add')
          .form-group
            label(for='firstName') First Name:
            input.form-control(type='text' name='firstName')
          .form-group
            label(for='lastName') Last Name:
            input.form-control(type='text' name='lastName')
          .form-group
            label(for='email') Email:
            input.form-control(type='email' name='email')
          .form-group
            label(for='notes') Notes:
            textarea.form-control(name='notes')
          button.btn.btn-primary(type='submit') Create contact 
          a.btn.btn-secondary(href='/contacts') Cancel
