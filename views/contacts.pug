extends layout

block content
  .card.border-0
  .card-body
    //- Header 
    .form-header.blue.accent-1
      h3.mt-2
        i.fas.fa-sun.mr-3
          | Contact Dashboard
    .text-center.my-4
      a(href='/contacts/add')
        button.btn.btn-primary
          |  Add contact
  
  hr
  if contacts.length > 0
    table.table.table-striped
      thead
        tr
          th(scope='col') #
          th(scope='col') First Name
          th(scope='col') Last Name
          th(scope='col') Email
          th(scope='col') Action
      tbody
        each val, index in contacts
          tr
            td= index + 1
            td= val.firstName
            td= val.lastName
            td= val.email
            td
              a(href=`/contacts/${val.id}`)
                button.btn.btn-secondary.m-0
                  |  More details
