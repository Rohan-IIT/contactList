extends layout

block content
  a(href='/contacts/add') Add a contact
  hr
  if contacts.length > 0
    table.table.table-striped
      thead
        tr
          th(scope='col') #
          th(scope='col') First Name
          th(scope='col') Last Name
          th(scope='col') Email
          th(scope='col') Action
      tbody
        each val, index in contacts
          tr
            td= index + 1
            td= val.firstName
            td= val.lastName
            td= val.email
            td
              a.btn.btn-primary(href=`/contacts/${val.id}`, role='button') Action
